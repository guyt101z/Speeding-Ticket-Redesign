<div class="list-group-item list-group-item-hover">
	<%= link_to user_path(user) do %>
		<div class="row">
			<div class="col-md-1">
				<%= image_tag user.avatar.url(:thumb), :class => 'img-circle border' %>
			</div>
			<div class="col-md-4">
				<strong><%= user.full_name %> (<%= user.email %>)</strong>
				<br>
				<%= user.location %> | <%= user.phone_number %> | <%= user.department %>
			</div>
		</div>
	<% end %>
</div>