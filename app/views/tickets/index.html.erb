<h2> Dashboard </h2>

<br>

<% @current_technician.tickets.each do |ticket| %>
	<div class="Ticket">
		<ul class="properties">
			<li>Assigned Technicians:</li>
			<ul>
				<% ticket.technicians.each do |technician| %>
				<li>
					<%= technician.full_name %>
				</li>
				<% end %>
			</ul>
			<ul>
				<% ticket.assets.each do |asset| %>
				<li>
					<%= asset.tag_number %>
				</li>
				<% end %>
			</ul>
			<li>User: <%= ticket.user.full_name %></li>
			<li>Title: <%= ticket.title %></li>
			<li>Description: <%= ticket.description %></li>
			<li>Status: <%= ticket.status %></li>
			<li>Deadline: <%= ticket.deadline %></li>
			<li>
				Priority?: 
				<% if ticket.priority == true %>
					Yes
				<% else %>
					No
				<% end %>
			</li>
			<li><%= link_to 'Show', ticket_path(ticket) %></li>
		</ul>
	</div>
<% end %>